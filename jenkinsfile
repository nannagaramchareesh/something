pipeline {
    agent any
    environment {
        KUBECONFIG = 'C:\\path\\to\\kubeconfig'  
        IMAGE_NAME = 'chareesh123/firstrepo'    
    }
    stages {
        stage('Deploy') {
            steps {
                script {
                    echo 'Applying Kubernetes deployment...'
                    bat 'kubectl apply -f deployment.yaml'
                }
            }
        }
        stage('Expose') {
            steps {
                script {
                    echo 'Creating Kubernetes service...'
                    bat 'kubectl expose deployment nginx-deployment --type=NodePort --port=5000'
                }
            }
        }
        stage('Verify') {
            steps {
                script {
                    echo 'Verifying deployment...'
                    bat 'kubectl get pods'
                }
            }
        }
    }
}
